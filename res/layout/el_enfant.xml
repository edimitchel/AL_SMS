<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icone_peripherique"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_gravity="left"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top|fill_vertical|fill_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nomPeripherique"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/label_appareil_bluetooth"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/adresseMacPeripherique"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/label_adresse_mac"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</GridLayout>